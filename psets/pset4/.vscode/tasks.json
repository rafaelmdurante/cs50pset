{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: clang build active file",
			"command": "/usr/bin/clang",
			"args": [
				"-g",
				"-lcs50",
				"${file}",
				"-o",
				"${fileDirname}/filter",
				"-fsanitize=signed-integer-overflow",
				"-fsanitize=undefined",
				"-ggdb3",
				"-O0",
				"-Qunused-arguments",
				"-std=c11",
				"-Wall",
				"-Werror",
				"-Wextra",
				"-Wno-sign-compare",
				"-Wno-unused-parameter",
				"-Wno-unused-variable",
				"-Wshadow",
				"${fileDirname}/filter.c"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}